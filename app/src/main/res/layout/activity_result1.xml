<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity1">

        <TextView
            android:id="@+id/textView_about_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/check"
            android:background="@color/red"
            android:textAlignment="center"
            android:layout_marginTop="50dp"
            android:textSize="50sp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />


        <TextView
            android:id="@+id/textView_result1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/check"
            android:background="@color/red"
            android:textAlignment="center"
            android:layout_marginTop="50dp"
            android:textSize="50sp"

            app:layout_constraintTop_toBottomOf="@+id/textView_about_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/textView_result2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/check"
            android:background="@color/red"
            android:textAlignment="center"
            android:layout_marginTop="50dp"
            android:textSize="50sp"

            app:layout_constraintTop_toBottomOf="@+id/textView_result1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/textView_result3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/check"
            android:background="@color/red"
            android:textAlignment="center"
            android:layout_marginTop="50dp"
            android:textSize="50sp"

            app:layout_constraintTop_toBottomOf="@+id/textView_result2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <Button
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:layout_marginTop="50px"
            android:text="@string/getting_button"
            android:onClick="onClickButton"
            app:layout_constraintTop_toBottomOf="@+id/textView_result3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
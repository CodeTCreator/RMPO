<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFEB3B"
        android:fontFamily="@font/aclonica"
        android:layout_marginTop="100px"
        android:text="@string/data_view_1"
        android:textColor="#FF3700B3"
        android:textSize="40sp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/btn_click"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="10dp"
        android:onClick="sendMessage"


        android:text="Click"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginBottom="10dp"

        android:onClick="Reset_value"
        android:text="@string/btn_reset"
        app:layout_constraintLeft_toRightOf="@id/btn_click"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
            android:id="@+id/editText_1"
            android:layout_width="500px"
            android:layout_height="250px"

            android:background="@color/teal_700"
            android:hint="@string/editText_1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
        <SeekBar
            android:id="@+id/SeekBar_1"
            android:layout_width="700px"
            android:layout_height="100px"
            android:min="30"
            android:max="70"
            android:progress="50"

            app:layout_constraintTop_toBottomOf="@id/textView_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
        <TextView
            android:id="@+id/Seek_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:text="50"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/SeekBar_1"
        />
</androidx.constraintlayout.widget.ConstraintLayout>